generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// tabela User
model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  expenses      Expense[]


  @@map("users")
}

// tabela Despesas
model Expense {
  id            String      @id @default(uuid())
  name          String
  amount        Float
  purchaseDate  DateTime?   // NOVO campo: quando a despesa foi criada ou a compra feita
  dueDate       DateTime    // data para pagar (vencimento)
  paymentDate   DateTime?   // quando foi paga de fato
  type          ExpenseType
  installments  Int?        // s√≥ se for parcelada
  paid          Boolean     @default(false)
  read          Boolean     @default(false)
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  createdAt     DateTime    @default(now())
  installmentNumber  Int?
  totalInstallments  Int?
 
  @@map("expenses")
}

// Tipo da despesas
enum ExpenseType {
  FIXED
  INSTALLMENT
}

