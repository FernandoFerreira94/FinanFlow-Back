generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  expenses      Expense[]
  notifications Notification[]

  @@map("users")
}

model Expense {
  id            String      @id @default(uuid())
  name          String
  amount        Float
  purchaseDate  DateTime?   // NOVO campo: quando a despesa foi criada ou a compra feita
  dueDate       DateTime    // data para pagar (vencimento)
  paymentDate   DateTime?   // quando foi paga de fato
  type          ExpenseType
  installments  Int?        // s√≥ se for parcelada
  paid          Boolean     @default(false)
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  createdAt     DateTime    @default(now())
  installmentNumber  Int?
  totalInstallments  Int?
  notifications Notification[]
  @@map("expenses")
}

enum ExpenseType {
  FIXED
  INSTALLMENT
}

model Notification {
  id   String  @id @default(uuid())
  read Boolean @default(false)
  paid Boolean @default(false)

  // Relacionamento com User
  user   User   @relation(fields: [userId], references: [id])
  userId String

  // Relacionamento com Expense
  expense   Expense @relation(fields: [expenseId], references: [id])
  expenseId String

  createdAt DateTime @default(now())

  @@map("notifications")
}
